extends ../layout

block content
  .show-page
    h1 
      a(href="/users") Users

    if(user) 
      h2= user.email
      for slip in user.slips
        .slip-wrapper
          .time 
            .info
              p hours - #{slip.totalHours}
              p date  - #{slip.formatedDate}
            .icons
              span.edit
              span.trash
          .tabs
            p.tab.language= slip.language
            p.tab.sub-languages= slip.sub_languages
            p.tab.study-type= slip.study_type
          a(href='/' + slip.url target="_blank")= slip.resource_title
          p= slip.description


      a(href="/users/edit/" + user._id) edit
      form(method="Post" action="/users/delete/" + user._id) 
        button(type="submit") delete

      
